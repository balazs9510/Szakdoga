<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_exerciseitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/tv_exerciseitem_serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_exerciseitem_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete_exerciseitem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_delete_forever" />

            <Button
                android:id="@+id/btn_edit_exercise_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_edit" />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/textColor" />
</LinearLayout>