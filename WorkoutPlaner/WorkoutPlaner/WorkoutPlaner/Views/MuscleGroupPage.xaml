                HorizontalOptions="Center">
            <ActivityIndicator.WidthRequest>
                <OnPlatform 
                        x:TypeArguments="x:Double"
                        Android="100"
                        WinPhone="400"/>
            </ActivityIndicator.WidthRequest>
        </ActivityIndicator>
    </Grid>
